<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="11sp"
        android:layout_marginVertical="11sp"
        card_view:cardCornerRadius="5dp"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="9dp">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27.08.2020"
                android:fontFamily="@font/inter_bold_slnt0"
                android:layout_marginHorizontal="21dp"
                android:textSize="18dp"
                card_view:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:50"
                android:fontFamily="@font/inter_regular_slnt0"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="12dp"
                android:textSize="14dp"
                card_view:layout_constraintTop_toBottomOf="@id/tvDate"/>

            <TextView
                android:id="@+id/tvDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Бишкек-Ош"
                android:fontFamily="@font/inter_regular_slnt0"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                card_view:layout_constraintTop_toBottomOf="@id/tvTime"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="800 KGS"
                android:fontFamily="@font/inter_regular_slnt0"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                card_view:layout_constraintTop_toBottomOf="@id/tvDirection"/>

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="После обеда не актуально"
                android:fontFamily="@font/inter_regular_slnt0"
                android:layout_marginHorizontal="21dp"
                android:layout_marginTop="8dp"
                android:textSize="14dp"
                card_view:layout_constraintTop_toBottomOf="@id/tvPrice"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>