<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.travel.CreateTravelFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="18dp">

            <TextView
                android:id="@+id/tvCreateTravelTitleWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Создать поездки"
                android:fontFamily="@font/inter_regular_slnt0"
                android:textSize="18sp"
                android:layout_marginVertical="40dp"
                app:layout_constraintBottom_toTopOf="@+id/rvTravelResult"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Откуда?"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="28dp"
                app:layout_constraintTop_toBottomOf="@id/tvCreateTravelTitleWord"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular_slnt0"
                android:textColor="@color/colorTitle" />

            <EditText
                android:id="@+id/edFrom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvFrom"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:height="44dp"
                android:paddingHorizontal="8dp"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/inter_regular_slnt0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvWhere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Куда?"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="28dp"
                app:layout_constraintTop_toBottomOf="@id/edFrom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular_slnt0"
                android:textColor="@color/colorTitle" />

            <EditText
                android:id="@+id/edWhere"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvWhere"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:height="44dp"
                android:paddingHorizontal="8dp"
                android:fontFamily="@font/inter_regular_slnt0"
                android:background="@drawable/edit_text_bg"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="28dp"
                app:layout_constraintTop_toBottomOf="@id/edWhere"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorTitle"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular_slnt0"/>

            <EditText
                android:id="@+id/edDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDate"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:paddingHorizontal="8dp"
                android:fontFamily="@font/inter_regular_slnt0"
                android:background="@drawable/edit_text_bg"
                android:height="44dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Время"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="28dp"
                app:layout_constraintTop_toBottomOf="@id/edDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorTitle"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular_slnt0"/>

            <EditText
                android:id="@+id/edTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTime"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/edit_text_bg"
                android:height="44dp"
                android:paddingHorizontal="8dp"
                android:fontFamily="@font/inter_regular_slnt0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Цена"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="28dp"
                app:layout_constraintTop_toBottomOf="@id/edTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorTitle"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular_slnt0"/>

            <EditText
                android:id="@+id/edPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPrice"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/edit_text_bg"
                android:height="44dp"
                android:paddingHorizontal="8dp"
                android:fontFamily="@font/inter_regular_slnt0"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Примечание"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="28dp"
                android:layout_marginStart="28dp"
                app:layout_constraintTop_toBottomOf="@id/edPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/colorTitle"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular_slnt0"/>

            <EditText
                android:id="@+id/edInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvInfo"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/edit_text_bg"
                android:height="44dp"
                android:paddingHorizontal="8dp"
                android:fontFamily="@font/inter_regular_slnt0"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnReady"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Готово!"
                android:fontFamily="@font/inter_bold_slnt0"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="56dp"
                app:layout_constraintTop_toBottomOf="@id/edInfo"
                android:background="@drawable/btn_bg"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>